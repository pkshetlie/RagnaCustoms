{%  extends 'emails/base.html.twig' %}

{% block content %}
  <!-- INTRO -->
  <tr>
    <td align="center" style="padding:40px 30px;">
      <h2 style="color:#ffffff;margin:0 0 10px 0;font-size:22px;">
        Account Deletion Request
      </h2>
      <p style="color:#c7c7e0;font-size:15px;line-height:1.6;margin:0;">
        We received a request to delete your RagnaCustoms account.<br>
        If you want to proceed with this action, please click the button below to confirm.
      </p>
      <p style="color:#ff6b6b;font-size:14px;line-height:1.6;margin:20px 0 0 0;font-weight:bold;">
        Warning: This action is irreversible and will permanently delete all your data.
      </p>
    </td>
  </tr>

  <!-- CTA -->

  <tr>
    <td align="center" style="padding:10px 30px 40px 30px;">
      <a href="{{ confirmationUrl }}"
         style="
background:#e74c3c;
color:#ffffff;
text-decoration:none;
padding:14px 28px;
border-radius:6px;
display:inline-block;
font-size:15px;
font-weight:bold;
">
        Confirm Account Deletion
      </a>
      <p style="color:#a0a0c0;font-size:13px;margin:20px 0 0 0;">
        If you did not request this deletion, please ignore this email<br>
        or contact our support team immediately.
      </p>
    </td>
  </tr>
{% endblock %}
