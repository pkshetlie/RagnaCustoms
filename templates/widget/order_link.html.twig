{% macro order_link(text, property, orderByParam = 'order_by', orderSortParam = 'order_sort') -%}
<a href="{{ url(
    app.request.attributes.get('_route'),
    app.request.attributes.get('_route_params')
        | merge(app.request.query.all)
        | merge({(orderByParam): property, (orderSortParam): app.request.query.get(orderSortParam, 'asc') == 'asc' ? 'desc' : 'asc'})
    ) }}"
   class="{% if app.request.query.get(orderByParam) == property %}active{% endif %}
          {% if app.request.query.get(orderSortParam, 'asc') == 'asc' and app.request.query.get(orderByParam) == property %}sort-asc{% else %}sort-desc{% endif %}">
    {{ text|trans }}
</a>
{%- endmacro %}
