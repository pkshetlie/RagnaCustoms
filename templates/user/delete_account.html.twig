{% extends 'base.html.twig' %}
{% block title %}
  Delete account - {{ parent() }}
{% endblock %}
{% block body %}
  <div {{ stimulus_controller('delete-account') }}>
    <div class="container-fluid">
      <div class="row mt-3">
        <div class="col-md-2">
          {% include 'user/partial/_left_part_user.html.twig' %}
        </div>
        <div class="col-md-8">
          <h2>{{ "Delete Account"|trans }}</h2>
          <div class="">
            <h4>We detected that you are a mapper with active songs</h4>
            <p>Before deleting your account, please choose one of the following options:</p>
            <form method="post">
              <div class="form-group">
                <div class="form-check">
                  <input class="form-check-input" type="radio" name="mapper_action" id="delete_songs" value="delete"
                         required>
                  <label class="form-check-label" for="delete_songs">
                    <strong>Delete all my songs</strong>
                  </label>
                </div>
                <div class="form-check mt-3">
                  <input class="form-check-input" type="radio" name="mapper_action" id="keep_songs" value="keep"
                         required>
                  <label class="form-check-label" for="keep_songs">
                    <strong>Keep my songs</strong>
                  </label>
                </div>
                <div class="ml-4 mt-2" id="mapper_name_field" style="">
                  <label for="mapper_name">Mapper name to display:</label>
                  <input type="text" class="form-control" id="mapper_name" name="mapper_name"
                         placeholder="{{ app.user.mapperName }}">
                  <small class="form-text text-muted">Note: Administrators reserve the right to modify this mapper
                    name.</small>
                </div>
              </div>
              
              <button type="submit" class="btn btn-danger mt-3">Confirm Account Deletion</button>
            </form>
            <p class="mt-3 text-muted">
              <strong>Note:</strong> Songs that have been co-created with other mappers will be transferred to the
              remaining owners.
            </p>
          </div>
        </div>
        <div class="col-md-2 pt-5">
        </div>
      </div>
    </div>
  </div>

{% endblock %}


